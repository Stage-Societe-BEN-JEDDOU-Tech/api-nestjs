generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        String  @id @unique
  firstname      String
  lastname  String  @unique
  email  String
}

model QueueOtp{
  otp String @id @unique
  email String @unique
}

model Domain{
  appId String @id @default(uuid())
  secretKey String @unique @default(cuid())
}